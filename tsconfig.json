{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": "./src",
    "paths": {
      "@modules": [
        "modules/index"
      ],
      "@application/dtos": [
        "application/dtos/index"
      ],
      "@application/use-case/category": [
        "application/use-case/category/index"
      ],
      "@application/use-case/company": [
        "application/use-case/company/index"
      ],
      "@application/use-case/tax": [
        "application/use-case/tax/index"
      ],
      "@domain/entities": [
        "domain/entities/index"
      ],
      "@domain/enums": [
        "domain/enums/index"
      ],
      "@infrastructure/persistence": [
        "infrastructure/persistence/index"
      ],
    }
  }
}